@model IEnumerable<ParentHandbook.Models.guardiansStudent>

@{
    ViewBag.Title = "View";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.studentPersonID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.school)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gradelevel)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.studentPersonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.school)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gradelevel)
            </td>
            <td>
                @Html.ActionLink("HandbookQuestions", "HandbookQuestions", new {  id=item.studentPersonID })
            </td>
        </tr>
    }

</table>
